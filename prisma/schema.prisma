generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}
enum Role {
  user
  admin
  mentor
}

model Class {
  class_id       String   @id @default(uuid()) @db.Uuid
  class_metadata String[] @default([])
  class_data     String[] @default([])
  class_name     String
  class_kategori String
  class_rate     Int      @default(1)
  class_price    Int
  class_iat      DateTime @default(now())
  class_updates  DateTime @updatedAt
}

model Users {
  id                     String   @id @default(uuid()) @db.Uuid
  username               String
  user_email             String   @unique
  user_password          String
  user_picture           String   @default("")
  admin                  Boolean  @default(false)
  role                   Role     @default(user)
  auth_token             String[] @default([])
  user_class_sertificate String[] @default([])
  createAt               DateTime @default(now())
  updateAt               DateTime @updatedAt
}

model Mentor_data {
  mentor_id          String @id
  mentor_description String @default("")
}

model Sertificate {
  id          String   @id @default(uuid()) @db.Uuid
  user_id     String
  class_id    String
  create_date DateTime @default(now())
}
